<launch>

<!-- Loading Map -->
  <arg name="map_file" default="/home/piyush/diy_bot/src/diy_robot/map/husky_map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

<!-- AMCL for Localisation -->
  <arg name="use_map_topic" default="true"/>
  <arg name="scan_topic" default="/scan"/>

  <node pkg="amcl" type="amcl" name="amcl">
    <param name="use_map_topic" value="$(arg use_map_topic)"/>
    <param name="odom_model_type" value="diff"/>
    <param name="odom_alpha5" value="0.1"/>
    <param name="gui_publish_rate" value="10.0"/>
    <param name="laser_max_beams" value="720"/>
    <param name="laser_min_range" value="0.1"/>
    <param name="laser_max_range" value="30"/>
    <param name="min_particles" value="500"/>
    <param name="max_particles" value="2000"/>
    <param name="kld_error" value="0.05"/>
    <param name="kld_z" value="0.99"/>
    <param name="odom_alpha1" value="0.2"/>
    <param name="odom_alpha2" value="0.2"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="global_frame_id" value="map"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="initial_pose_x" value="0.0"/>
    <param name="initial_pose_y" value="0.0"/>
    <param name="initial_pose_a" value="0.0"/>
    <param name="receive_map_topic" value="true"/>
    <param name="first_map_only" value="false"/>
    <remap from="/scan" to="$(arg scan_topic)"/>
   </node>

   <!-- Move Base Package for autonomous navigation -->
  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <param name="base_global_planner" type="string" value="global_planner/GlobalPlanner"/>
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
		<!-- <param name="controller_frequency" value="100.0" />
		<param name="controller_patience" value="8.0" />
    <param name="planner_frequency" value="100.0" />
		<param name="planner_patience" value="3.0" /> -->

    <param name="clearing_rotation_allowed" value="false" />
    
    <rosparam file="$(find diy_robot)/params/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find diy_robot)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find diy_robot)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find diy_robot)/params/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find diy_robot)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find diy_robot)/params/global_planner_param.yaml" command="load" />
  </node>

<node pkg="tf" type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 base_link map 0"/>

<node pkg="rviz" type="rviz" name="rviz" args="-d $(find diy_robot)/rviz/rviz_config.rviz"/>

</launch>