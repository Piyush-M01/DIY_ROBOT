<launch>

<arg name="scan_topic" default="/img_scan"/>
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>

    <param name="delta" value="0.1"/>
    <param name="minimumScore" value="150"/>
    <param name="sigma" value="3.0"/>
    <param name="kernelSize" value="5"/>
    <param name="lstep" value="0.05"/>
    <param name="astep" value="0.05"/>
    <param name="iterations" value="5"/>
    <param name="lskip" value="2"/>
    <param name="srr" value="0.1"/>
    <param name="srt" value="0.2"/>
    <param name="str" value="0.1"/>
    <param name="stt" value="0.2"/>
    <param name="linearUpdate" value="1.0"/>
    <param name="angularUpdate" value="1.0"/>
    <param name="temporalUpdate" value="1.0"/>
    <param name="resampleThreshold" value="0.5"/>
    <param name="particles" value="30"/>
    <param name="xmin" value="-50.0"/>
    <param name="ymin" value="-50.0"/>
    <param name="xmax" value="50.0"/>
    <param name="ymax" value="50.0"/>
    <param name="deltaT" value="1.0"/>
    <param name="transform_publish_period" value="0.05"/>
    <param name="map_update_interval" value="1.0"/>
    <param name="maxUrange" value="10.0"/>
    <param name="maxRange" value="12.0"/>
    <remap from="scan" to="$(arg scan_topic)"/>
    </node>

    <!-- <node pkg="tf" type="static_transform_publisher" name="laser_broadcaster" args="0 0 0.25 0 0 0 base_link laser 100" /> -->

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find diy_robot)/rviz/rvizconfig.rviz" />

</launch>